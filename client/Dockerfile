FROM node:18-alpine as build

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build args
ARG REACT_APP_AUTH_SERVICE_URL
ARG REACT_APP_CHAT_SERVICE_URL
ARG REACT_APP_ADMIN_SERVICE_URL
ARG REACT_APP_INGESTION_SERVICE_URL

# Set env vars for build
ENV REACT_APP_AUTH_SERVICE_URL=$REACT_APP_AUTH_SERVICE_URL
ENV REACT_APP_CHAT_SERVICE_URL=$REACT_APP_CHAT_SERVICE_URL
ENV REACT_APP_ADMIN_SERVICE_URL=$REACT_APP_ADMIN_SERVICE_URL
ENV REACT_APP_INGESTION_SERVICE_URL=$REACT_APP_INGESTION_SERVICE_URL

# Build app
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built app to nginx
COPY --from=build /app/build /usr/share/nginx/html

# Copy nginx config
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 3000

CMD ["nginx", "-g", "daemon off;"]
